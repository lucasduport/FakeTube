<main>
  <h1>Login</h1>
  <form
    class="loginForm"
    action="/users/login"
    method="post"
    enctype="application/x-www-form-urlencoded"
  >
    <ul>
      <li>
        <label for="username">Username:</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Write your username"
        />
      </li>
      <li>
        <label for="password">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Write you password"
        />
      </li>
    </ul>
    <input type="submit" value="Login" />
    <p><br />If you do not an have account yet.<a href="/register">
        Please register here</a>
    </p>
  </form>

</main>